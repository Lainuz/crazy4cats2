<%= form_with(model: @comment, local: true) do |f| %>
    <% if @comment.errors.any? %>
    <div id = 'error_explanation'>
        <h2>Este comentario no se pudo crear por las siguientes razones</h2>
    <ul>
    <% @comment.errors.full_messages.each do |msg|%>
    <li><%= msg %></li>
    <% end %>
    </ul>
    </div>
    <% end %>

    <%= f.hidden_field :article_id, value: @article.id %>
        <div class = 'field'>
            <%= f.label :Comentario, as: "Comenta" %>
            <div>
            <%= f.text_area :content, cols: 60, rows: 5, class:"border border-primary focus-ring rounded-2 mb-3" %>
            </div>
        <div class = 'actions'>
        <%# <%= f.submit %>
        <button class="btn btn-outline-success btn-sm" type="submit">Enviar comentario</button>
    </div>
<% end %>